<h1>This is the Products' list of User: <%= @user.name %></h1>

<%= flash[:notice] %>
<ul>
	<% @products.each do |product| %>
		<li>
			<strong> Title: </strong><%= product.title %>
			<strong> Description: </strong><%= product.description %>
			<strong> Deadline: </strong><%= product.deadline %>
			<%= link_to('Show', user_product_path(@user,product)) %>

			<%= link_to('Delete', user_product_path(@user, product),
			method: :delete, data: { confirm: 'Are you sure?' }) %>
		</li>
	<% end %>
</ul>